{
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[python]": {
    "editor.rulers": [120]
  },
  "breadcrumbs.enabled": true, // file path en haut de la window du script
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.autoClosingBrackets": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 18,
  "editor.linkedEditing": false, // Quand on change un élément HTML, change la balise fermante
  "editor.minimap.enabled": true, // minimap de scroll sur la droite
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": "off",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestionsDelay": 10,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [180],
  "editor.suggest.insertMode": "insert", // L'autocomplétion remplace le mot en cours
  "editor.suggest.localityBonus": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "off",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.wordWrap": "on",
  "emmet.triggerExpansionOnTab": true, // Expand html tag on tab
  "explorer.autoReveal": true,
  "explorer.openEditors.sortOrder": "alphabetical",
  "files.defaultLanguage": "js",
  "files.exclude": {
    "**/.git": true,
    "**/.gitignore": true,
    "**/.idea": true,
    "**/node_modules": false,
    "pnpm-lock.yaml": true
  },
  "indentRainbow.colors": [
    "rgba(255,255,64,0.1)",
    "rgba(127,255,127,0.1)",
    "rgba(255,127,255,0.1)",
    "rgba(79,236,236,0.1)"
  ],
  "indentRainbow.indentSetter": {
    "js": 2,
    "ts": 2
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "markdown.preview.scrollPreviewWithEditor": false,
  "tailwind-fold.autoFold": false,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "GitBash": {
      "icon": "terminal-bash",
      "path": ["C:\\Program Files\\Git\\bin\\bash.exe"],
      "source": "Git Bash"
    }
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "window.zoomLevel": -1,
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none", // charge page d'acceuil
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  }
}
